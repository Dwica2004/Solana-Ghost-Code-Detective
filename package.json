    "ora": "^8.0.1",
    "table": "^6.8.1",
    "bs58": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/bs58": "^4.0.4",
    "typescript": "^5.3.3",
    "eslint": "^8.56.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0"
  }
